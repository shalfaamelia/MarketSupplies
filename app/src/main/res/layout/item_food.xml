<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:backgroundTint="@color/white"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="10dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/textViewNamaMakanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Makanan"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:drawableRight="@drawable/ic_cardmakanan" />

        <TextView
            android:id="@+id/textViewBeratMakanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Berat Makanan"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewNamaMakanan" />

        <TextView
            android:id="@+id/textViewJumlahStokMakanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah Stok"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewBeratMakanan" />

        <!-- Tombol Ubah dan Hapus dengan ConstraintLayout -->
        <Button
            android:id="@+id/btnUbah"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:text="Ubah"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/red"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnHapus"
            app:layout_constraintTop_toBottomOf="@id/textViewJumlahStokMakanan"
            app:layout_constraintWidth_percent="0.5"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnHapus"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:text="Hapus"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/red"
            app:layout_constraintStart_toEndOf="@id/btnUbah"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewJumlahStokMakanan"
            app:layout_constraintWidth_percent="0.5"
            android:layout_marginTop="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
